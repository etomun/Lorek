<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/v_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.etomun.lorek.ScannerView
        android:id="@+id/v_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_icon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="48dp"
        android:gravity="end">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:button="@drawable/ic_gallery" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:button="@drawable/ic_flash" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_subtext"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="48dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingBottom="160dp"
        android:textColor="@android:color/white"
        app:lineHeight="21sp"
        tools:text="Subtext Subtext Subtext Subtext Subtext Subtext Subtext Subtext Subtext Subtext Subtext Subtext " />
</RelativeLayout>